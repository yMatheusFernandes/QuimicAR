<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="False">
    <ui:VisualElement name="InstructionContainer" class="container--instruction">
        <ui:VisualElement name="highlight" class="container--instruction-highlight">
            <ui:VisualElement name="blue" class="container--instruction-highlight-blue" />
            <ui:VisualElement name="green" class="container--instruction-highlight-green" style="display: none;" />
        </ui:VisualElement>
        <ui:VisualElement name="stepStatusIndicator" class="container--instruction-icon">
            <ui:VisualElement name="imgArrow" class="image--instruction-arrow" />
            <ui:VisualElement name="imgCheckmark" class="image--instruction-checkmark" style="display: none;" />
        </ui:VisualElement>
        <ui:VisualElement name="InstructionText" class="container--instruction-text">
            <ui:Label text="Enter Play mode" name="InstructionTitle" class="label--instruction-title" />
            <ui:VisualElement name="InstructionDescription" class="label--instruction-description" />
        </ui:VisualElement>
    </ui:VisualElement>
    <ui:ScrollView name="CodeSampleScrollView" mode="Horizontal" class="code-sample-scrollview">
        <ui:Label name="CodeSample" text="CodeSample" selectable="true" class="tutorial-code-sample" />
    </ui:ScrollView>
    <ui:VisualElement name="TutorialMediaContainer" class="container--tutorial-media">
        <ui:VisualElement name="TutorialMedia" class="tutorial-media">
            <ui:VisualElement name="PopoutButton" class="image-popout-button" />
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
